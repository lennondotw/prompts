{
  "lineWidth": 100,
  "indentWidth": 2,
  "useTabs": false,
  "newLineKind": "lf",
  "markdown": {},
  "typescript": {
    "quoteStyle": "preferDouble",
    "trailingCommas": "onlyMultiLine",
    "semiColons": "always"
  },
  "includes": [
    "**/*.{md,js,mjs,cjs,ts,mts,cts,jsx,tsx,json}"
  ],
  "excludes": [
    "node_modules",
    "pnpm-lock.yaml",
    "CHANGELOG.md"
  ],
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.21.1.wasm",
    "https://plugins.dprint.dev/typescript-0.95.15.wasm"
  ]
}
